{
    "name": "mlbrgn/laravel-form-components",
    "description": "Blade components to rapidly build forms with Bootstrap 5.",
    "keywords": [
        "Mlbrgn",
        "bootstrap5",
        "bootstrap-5",
        "laravel",
        "form",
        "forms",
        "form-builder",
        "form-components",
        "laravel-form-builder",
        "laravel-form-components"
    ],
    "homepage": "https://github.com/mlbrgn/laravel-form-components",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Nick D.",
            "email": "info@mlbrgn.nl",
            "role": "Developer"
        },
        {
            "name": "Evertjan G.",
            "email": "info@mlbrgn.nl",
            "role": "Developer"
        },
        {
            "name": "Pascal Baljet",
            "email": "pascal@protone.media",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3",
        "barryvdh/laravel-ide-helper": "^3.0.0",
        "illuminate/support": "^9.0 || ^10.0 || ^11.0 || ^12.0",
        "symfony/http-foundation": "^6.0 || ^7.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0.0",
        "laravel/pint": "^1.16",
        "mockery/mockery": "^1.4.4",
        "nesbot/carbon": "^3.0.0",
        "orchestra/testbench": "^10.0.0",
        "orchestra/testbench-browser-kit": "^10.0.0",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin-drift": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.0",
        "spatie/laravel-translatable": "^6.0.0",
        "symfony/dom-crawler": "^7.0.0"
    },
    "autoload": {
        "psr-4": {
            "Mlbrgn\\LaravelFormComponents\\": "src"
        },
        "files": [
            "Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mlbrgn\\LaravelFormComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "test": [
            "@putenv XDEBUG_MODE=off",
            "./vendor/bin/pest"
        ],
        "quicktest": [
            "@putenv XDEBUG_MODE=off",
            "./vendor/bin/pest --parallel"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Mlbrgn\\LaravelFormComponents\\Providers\\FormComponentsServiceProvider"
            ]
        }
    }
}
